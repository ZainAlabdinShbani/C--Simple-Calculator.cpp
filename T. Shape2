#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    int b=2*n,a=n-1;
    for(int i=0;i<n;i++){
        for(int j=0;j<b;j++){
                int c=a-i;
            if(j==c){
                int count=2*i+1;
                    while(count>0){
                     cout<<'*';
                     count--;
                    }
                break;
            }
            else
                cout<<" ";

        }
        cout<<endl;
    }
    return 0;
    
   }
