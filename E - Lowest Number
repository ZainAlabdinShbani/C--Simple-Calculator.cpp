#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main()
{
   int n;
   cin>>n;
   int a[n];
   for (int i=0;i<n;i++){
    cin>>a[i];
   }
   int min1=a[0],index=0;
   for(int i=1;i<n;i++){
    if (min1>a[i]){
        min1=a[i];
        index=i;
    }
   }
   cout<<min1<<" "<<index+1;
    return 0;
}
